{
  "dashboard": {
    "title": "CI/CD Pipeline Monitoring Dashboard",
    "panels": [
      {
        "id": 1,
        "title": "Kubernetes Pods Status",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{namespace=\"default\", phase=\"Running\"})",
            "legendFormat": "Running Pods"
          }
        ]
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"default\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{namespace=\"default\"}) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Deployment Replicas",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_deployment_status_replicas{deployment=\"train-schedule-deployment\"}",
            "legendFormat": "Replicas"
          }
        ]
      },
      {
        "id": 5,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ]
      },
      {
        "id": 6,
        "title": "Container Restarts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_restarts_total{namespace=\"default\"})",
            "legendFormat": "Total Restarts"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1
  }
}
